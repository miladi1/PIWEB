{% extends 'base.html.twig' %}
{% block content %}
<section class="find-job section">
    <div class="container">
        <h2 class="section-title">Hot events</h2>
        <div class="row">
            <div class="col-md-12">
                {% for evenement in evenements %}
                <div class="job-list">
                    <div class="thumb">
                        <a href="job-details.html"><img src="assets/img/jobs/img-1.jpg" alt=""></a>
                    </div>
                    <div class="job-list-content">
                        <h4><a href="job-details.html">{{ evenement.titre }}</a></h4>
                        <p>{{ evenement.description }}</p>
                        <p>date start : {{ evenement.dateStart ? evenement.dateStart|date('Y-m-d H:i:s') : '' }}  , date end : {{ evenement.dateEnd ? evenement.dateEnd|date('Y-m-d H:i:s') : '' }}</p>
                        <div class="job-tag">
                            <div class="pull-left">
                                <div class="meta-tag">
                                    <span><a href="browse-categories.html"><i class="ti-brush"></i>{{ evenement.nombrePar }}</a></span>

                                </div>
                            </div>
                            <div class="pull-right">
                                <div class="icon">
                                    <i class="ti-heart"></i>
                                </div>
                                <a href="{{ path('participer',{'id': evenement.id }) }}" class="btn btn-common btn-rm">Participer</a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="col-md-12">
                <div class="showing pull-left">
                    <a href="#">Showing <span>6-10</span> Of 24 Jobs</a>
                </div>
                <ul class="pagination pull-right">
                    <li class="active"><a href="#" class="btn btn-common" ><i class="ti-angle-left"></i> prev</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li class="active"><a href="#" class="btn btn-common">Next <i class="ti-angle-right"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
{% endblock %}